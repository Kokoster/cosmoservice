<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/date_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:layout_marginLeft="24dp"
        android:width="80dp"
        android:nestedScrollingEnabled="true"
        android:textIsSelectable="true"
        android:fontFamily="sans-serif"
        android:textColor="#d9000000"
        android:height="48dp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/cold_water_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/date_text"
        android:layout_toEndOf="@+id/date_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:width="40dp"
        android:textAlignment="textEnd"
        android:typeface="sans"
        android:textColor="#d9000000"
        android:height="48dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hot_water_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cold_water_text"
        android:layout_toEndOf="@+id/cold_water_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:width="40dp"
        android:textAlignment="textEnd"
        android:typeface="sans"
        android:textColor="#d9000000"
        android:height="48dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/day_light_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/hot_water_text"
        android:layout_toEndOf="@+id/hot_water_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:width="50dp"
        android:textAlignment="textEnd"
        android:typeface="sans"
        android:textColor="#d9000000"
        android:height="48dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/night_light_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day_light_text"
        android:layout_toEndOf="@+id/day_light_text"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:width="40dp"
        android:textAlignment="textEnd"
        android:typeface="sans"
        android:textColor="#d9000000"
        android:height="48dp"
        android:fontFamily="sans-serif"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical" />
</RelativeLayout>